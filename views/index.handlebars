<div class="container text-center">
    <div class="row header">
        <div class="col-md-12">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
</div>

<div class="container burgers">
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers to Eat!</h2>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-6">
            <h2>Burgers Eaten!</h2>
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>

<div class="container text-center burgers">
    <div class="row">
        <div class="col-md-12">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger1">Burger Name:</label>
                    <input type="text" id="burger1" name="burger_name">
                </div>
                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
        </div>
    </div>
</div>